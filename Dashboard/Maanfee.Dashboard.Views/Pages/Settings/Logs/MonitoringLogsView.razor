@page "/Settings/MonitoringLogsView"
@inherits _BaseView

<MaanfeeDashboardPage>
    <MaanfeeDashboardPageHeader PageTitle="@Maanfee.Logging.Console.Resources.Resource.StringMonitoringLogs" />

    <MudTabs Elevation="2" Rounded ApplyEffectsToContainer PanelClass="pa-2">
        <MudTabPanel Text="@Maanfee.Logging.Console.Resources.Resource.StringMonitoringLogs">
            <LogConsole Title="@Maanfee.Logging.Console.Resources.Resource.StringMonitoringLogs" Align="@(SharedLayoutSettings.IsRTL? Align.End: Align.Start)" />
        </MudTabPanel>
        <MudTabPanel Text="@Maanfee.Logging.Console.Resources.Resource.StringLogHistory">
            <ComponentLogHistory Title="@Maanfee.Logging.Console.Resources.Resource.StringLogHistory" />
        </MudTabPanel>
    </MudTabs>

</MaanfeeDashboardPage>
