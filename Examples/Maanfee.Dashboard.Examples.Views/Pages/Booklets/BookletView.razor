@page "/Booklets/BookletView"

<MaanfeeDashboardPage>
    <MaanfeeDashboardPageHeader PageTitle="Booklet" Title="Booklet" />

    <MudButton OnClick="()=>OpenBookletDialog()" Color="Color.Dark" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.MenuBook">
        Booklet
    </MudButton>
    @*   <BookletComponent />  *@

</MaanfeeDashboardPage>

@code {

    private async void OpenBookletDialog()
    {
        await Dialog.ShowAsync<BookletComponent>(string.Empty, new DialogOptions()
            {
                NoHeader = true,
                FullScreen = true,
                CloseButton = false,
                // MaxWidth = MaxWidth.ExtraExtraLarge,
                // FullWidth = true,
                Position = DialogPosition.Center,
                BackgroundClass = "Dialog-Blur",
            });
    }

}
