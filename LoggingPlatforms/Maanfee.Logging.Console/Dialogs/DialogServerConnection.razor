@namespace Maanfee.Logging.Console
@using MudBlazor

<MudRTLProvider RightToLeft="@IsRTL">
    <MudDialog Style="background-color:black">
        <DialogContent>
            <MudCardContent>
                <MudGrid>
                    <MudItem md="12">
                        <MudText Align="Align.Center">
                            <MudIcon Icon="@Icons.Material.Filled.WifiOff" Color="Color.Error" Style="font-size: 4rem;" />
                        </MudText>
                    </MudItem>
                    <MudItem md="12">
                        <MudText Align="Align.Center" Color="Color.Error" Typo="Typo.h5">
                            @Maanfee.Logging.Console.Resources.Resource.StringServerConnectionError
                        </MudText>
                    </MudItem>
                    <MudItem md="12" Style="text-align: center !important;">
                        <MudText Style="color:white;" Typo="Typo.button">
                            @Maanfee.Logging.Console.Resources.Resource.StringServerConnectionTemporarilyInterrupted
                        </MudText>
                    </MudItem>
                    <MudItem md="12" Style="text-align: center !important;">
                        <MudText Color="Color.Success" Typo="Typo.button">
                            @Maanfee.Logging.Console.Resources.Resource.StringServerConnectionAutomaticallyReconnected
                        </MudText>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </DialogContent>
    </MudDialog>
</MudRTLProvider>

@code {

    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; }

    private void Close() => MudDialog.Close();

    // *****************************************************

    [Parameter]
    public bool IsRTL { get; set; } = false;



}
