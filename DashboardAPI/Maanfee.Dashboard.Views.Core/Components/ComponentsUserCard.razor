@namespace Maanfee.Dashboard.Views.Core
@inherits _BaseView

<MudCard Elevation="0" Square="true" Class="@Class">
	<MudCardHeader>
		<CardHeaderAvatar>
			<MudAvatar Style="height:50px; width:50px;">
				<MudImage Src="@AccountStateContainer!.Avatar" />
			</MudAvatar>
		</CardHeaderAvatar>
		<CardHeaderContent>
			<MudText Typo="Typo.body2">@AccountStateContainer!.Name</MudText>
			<MudText Typo="Typo.caption">@AccountStateContainer!.PersonalCode</MudText>
		</CardHeaderContent>
	</MudCardHeader>
	<MudDivider DividerType="DividerType.FullWidth" />
</MudCard>
 
@code {

	[Parameter]
	public string? Class { get; set; }

	protected override void OnInitialized()
	{
		AccountStateContainer?.OnChange += StateHasChanged;
	}

